{
  $schema: 'https://www.schemastore.org/package.json',

  name: '@dudeofawesome/effect-schemas',
  version: '0.0.1',
  description: 'A set of common data schemas, written with Effect Schema',
  keywords: ['effect', 'effect-ts', 'schema'],
  homepage: 'https://github.com/dudeofawesome/effect-schemas/README.md',
  repository: {
    type: 'git',
    url: 'git+ssh://git@github.com/dudeofawesome/effect-schemas.git',
  },
  license: 'MIT',
  author: 'Louis Orleans <louis@orleans.io>',

  type: 'module',
  exports: {
    './*': {
      types: './dist/*.d.ts',
      default: './dist/*.js',
    },
  },
  files: ['./dist/', './src/'],

  scripts: {
    build: "./scripts/pkg_json.sh concurrently --raw --group 'pnpm:build:*'",
    'build:js': "esbuild --tsconfig=tsconfig.build.json $(glob 'src/**/*.?(c|m)[jt]s' --ignore '**/*.@(spec|test).*') --outdir=dist --sourcemap=inline --platform=node --target=node18 --format=esm",
    'build:types': 'tsc --project tsconfig.build.json --emitDeclarationOnly',
    check: "./scripts/pkg_json.sh concurrently --raw --group 'pnpm:test' 'pnpm:lint'",
    lint: "./scripts/pkg_json.sh concurrently --raw --group 'pnpm:lint:*'",
    'lint:js': 'eslint . --ext ts,json --cache',
    'lint:types': 'tsc --noEmit --pretty',
    prepack: 'pnpm run build && ./scripts/convert_pkg_json.sh',
    // workaround pnpm bug regarding `files` with json5
    postpack: './scripts/unconvert_pkg_json.sh',
    test: 'vitest',
    'test:debug': 'pnpm run test -- --inspectBrk',
  },

  peerDependencies: {
    '@effect/platform': '>=0.10.0',
    effect: '^3.0.0',
  },
  devDependencies: {
    '@code-style/code-style': '^2.0.0-34',
    '@code-style/eslint-config': '^2.0.0-34',
    '@code-style/eslint-config-esmodule': '^2.0.0-34',
    '@code-style/eslint-config-jest': '^2.0.0-34',
    '@code-style/eslint-config-node': '^2.0.0-34',
    '@code-style/eslint-config-typescript': '^2.0.0-34',
    '@code-style/jest-configs': '^2.0.0-34',
    '@code-style/typescript-configs': '^2.0.0-34',
    '@effect/eslint-plugin': '^0.3.2',
    '@effect/language-service': '^0.38.1',
    '@effect/vitest': '^0.25.1',
    '@types/node': '^24.3.1',
    concurrently: '^9.2.1',
    esbuild: '^0.25.9',
    glob: '^11.0.3',
    json5: '^2.2.3',
    typescript: '^5.9.2',
    vitest: '^3.2.4',
  },

  packageManager: 'pnpm@10.15.0',
  engines: {
    node: '>=20',
  },
  publishConfig: {
    access: 'public',
    provenance: true,
  },
  pnpm: {
    patchedDependencies: {},
  },
}
